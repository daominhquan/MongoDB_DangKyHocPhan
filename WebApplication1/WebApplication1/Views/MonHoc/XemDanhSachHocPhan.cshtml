@model IEnumerable<WebApplication1.Entities.HocPhan>
@using WebApplication1.Models
@{
    int position = 0;
    LopHocModel lopHocModel = new LopHocModel();
}
<h1>@ViewBag.TenMonHoc</h1>
<p>
    @Html.ActionLink("Thêm học phần ", "ThemHocPhan", new { id = ViewBag.id_monhoc }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>stt</th>
        <th>
            @Html.DisplayNameFor(model => model.id_LopHoc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SiSo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@position</td>
            <td>
                @lopHocModel.find(item.id_LopHoc).MaLopHoc
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SiSo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.ActionLink("Sửa", "EditHocPhan", new { Id_MonHoc = ViewBag.id_monhoc, position_hocphan = position }, new { @class = "badge w3-green" }) 
                @Html.ActionLink("Xóa", "DeleteHocPhan",
                               new { Id_MonHoc = ViewBag.id_monhoc, position_hocphan = position },
                               new { onclick = "return confirm('bạn có muốn xóa không?');", @class = "badge w3-red" })
                @*@Html.ActionLink("Edit", "EditHocPhan", new { Id_MonHoc = ViewBag.id_monhoc, position_hocphan = position }) |
                     @Html.ActionLink("Delete", "DeleteHocPhan", new { Id_MonHoc = ViewBag.id_monhoc, position_hocphan = position },
                    new { onclick = "return confirm('bạn có muốn xóa không?');" })*@
            </td>
        </tr>
        position = position + 1;
    }

</table>
<div>
    <a href="@Url.Action("Index","MonHoc")" class="btn btn-default">< Trở về</a>
</div>

