@model WebApplication1.Entities.HocPhan
@{
    ViewBag.Title = "Sửa Học Phần";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sửa học phần môn [@(ViewBag.TenMonHoc))]</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>HocPhan</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <!--Lớp học -->
        <div class="form-group">                                         
            @Html.LabelFor(model => model.id_LopHoc, htmlAttributes: new { @class = "control-label col-md-2" })
