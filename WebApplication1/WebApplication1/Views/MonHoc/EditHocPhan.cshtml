                <input name="Id_MonHoc" value="@ViewBag.Id_MonHoc" class="w3-hide" />
                <input name="id_hocphan" value="@ViewBag.id_hocphan" class="w3-hide" />

                <input type="submit" value="Sửa" class="btn btn-danger" />
