                        </div>
                        <!--Phong -->
                        <div class="form-group">
                            @Html.LabelFor(model => model.LyThuyet.Phong, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.LyThuyet.Phong, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.LyThuyet.Phong, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <!--GiangVien -->
                        <div class="form-group">
                            @Html.LabelFor(model => model.LyThuyet.id_GiangVien, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownListFor(model => model.LyThuyet.id_GiangVien, new SelectList(ViewBag.giangviens, "Id", "TenGiangVien"), "  -----Select List-----  ", new { @class = "form-control" })
