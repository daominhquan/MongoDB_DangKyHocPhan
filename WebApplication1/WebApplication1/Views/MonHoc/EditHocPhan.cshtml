            <div class="w3-half">
                <fieldset>
                    <legend>Thực hành</legend>
                    <div class="">
                        <!--Thu -->
                        <div class="form-group">
                            @Html.LabelFor(model => model.ThucHanh.Thu, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.ThucHanh.Thu, new { htmlAttributes = new { @class = "form-control" } })
