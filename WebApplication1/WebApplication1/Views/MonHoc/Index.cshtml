@model IEnumerable<WebApplication1.Entities.MonHoc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Thêm môn học", "Create", new { }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MaMonHoc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenMonHoc)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaMonHoc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenMonHoc)
            </td>
            <td>

                @Html.ActionLink("Xem học phần ", "XemDanhSachHocPhan", new { id = item.Id }, new { @class = "badge w3-blue" }) 
                @Html.ActionLink("Sửa", "Edit", new { id = item.Id }, new { @class = "badge w3-green" }) 
                @Html.ActionLink("Xóa", "Delete",
                               new { id = item.Id },
                               new { onclick = "return confirm('bạn có muốn xóa không?');", @class = "badge w3-red" })
            </td>
        </tr>
    }

</table>
@Html.Partial("backtoadminpage")